<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/ReviewToolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ReviewNickImg"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_heart"
            />
        <TextView
            android:id="@+id/Reviewnickname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="White"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/ReviewImgatComment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />
    <TextView
        android:id="@+id/Comment_ReviewStory"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:text="오늘은 참 좋은 날~ 정말 좋은 날이죠 하하하 한 숨도 못자고 수업을 연달아 듣는 아주 좋은날이에욯ㄹ히ㅏㅇ휠일"
        android:gravity="center_vertical|left|start"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commentTextView"
            android:layout_width="match_parent"
            android:layout_height="477dp"
            android:text="아직 댓글이 없는 스토리입니다. 이 스토리의 첫 응원자가 되어주세요!"
            android:gravity="center_vertical|left|start"
            >
        </TextView>

        <ListView
            android:id="@+id/commentListView"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        </ListView>
    </FrameLayout>
</LinearLayout>